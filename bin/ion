#!/bin/bash

if [[ $# -lt 1 ]]; then
  echo "Usage: bin/ion [spec|build]"
  exit 1
fi

IONIZED_DIR=$(bin/ionize src)
DEFAULT_FLAGS="-std=c2x -Wall -Werror -DPLATFORM=LINUX"

if [[ $1 == "spec" ]]; then
  SPEC_FILES=$(find $IONIZED_DIR/spec/*.c -type f | tr '\n' ' ')

  if [[ $2 == "prep" ]]; then
    gcc $IONIZED_DIR/spec.c           \
      $IONIZED_DIR/ion/libraries.c    \
      $SPEC_FILES $DEFAULT_FLAGS      \
      -E -include $IONIZED_DIR/ion.h  \
      > tmp/spec.c
    exit 0
  fi

  gcc $IONIZED_DIR/spec.c         \
    $IONIZED_DIR/ion/libraries.c  \
    $SPEC_FILES $DEFAULT_FLAGS    \
    -include $IONIZED_DIR/ion.h   \
    -g3 -o exe/spec

  if [ $? -ne 0 ]; then
    exit 1
  fi

  if [ $# -eq 1 ] || [[ $2 == "run" ]]; then
    valgrind                  \
      --track-origins=yes     \
      --leak-check=full       \
      --show-leak-kinds=all   \
      exe/spec
    echo

  elif [[ $2 == "debug" ]]; then
    gdb --args exe/spec ${@:2}

  else
    echo "Usage: bin/ion spec [run|debug|prep]"
    exit 1
  fi

elif [[ $1 == "build" ]]; then
  gcc $IONIZED_DIR/ion.c          \
    $DEFAULT_FLAGS                \
    -include $IONIZED_DIR/ion.h   \
    -o exe/libion.so              \
    -O3 -march=native             \
    -shared -fPIC
fi
