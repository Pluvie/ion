#!/bin/bash

if [[ $# -lt 1 ]]; then
  echo "Usage: bin/ion [spec|build]"
  exit 1
fi

PLATFORM="LINUX"
DEFAULT_FLAGS="-std=c11 -Wall -Werror"

if [[ $1 == "spec" ]]; then
  gcc src/spec/types.h -E >     \
    src/spec/types.ion.h

  ION="$(bin/ionize --directory src)"

  SPECS="$ION/spec.c $(find $ION/spec/*.c -type f | tr '\n' ' ')"
  gcc $SPECS $ION/ion.c         \
    $DEFAULT_FLAGS              \
    -D PLATFORM=$PLATFORM       \
    -include src/ion.h          \
    -g3 -o exe/spec

  if [ $? -ne 0 ]; then
    exit 1
  fi

  if [ $# -eq 1 ] || [[ $2 == "run" ]]; then
    valgrind                    \
      --track-origins=yes       \
      --leak-check=full         \
      --show-leak-kinds=all     \
      exe/spec
    echo

  elif [[ $2 == "debug" ]]; then
    gdb --args exe/spec ${@:2}

  else
    echo "Usage: bin/ion spec [run|debug|clear]"
    exit 1
  fi

elif [[ $1 == "build" ]]; then
  ION="$(bin/ionize --directory src)"
  gcc $ION/ion.c          \
    $DEFAULT_FLAGS                \
    -D ION_LIB                    \
    -D PLATFORM=$PLATFORM         \
    -include $ION/ion.h   \
    -o exe/libion.so              \
    -O3 -march=native             \
    -shared -fPIC
fi
